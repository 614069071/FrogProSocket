/* components/header/header.wxss */
.header-title {
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  text-align: center;
  background-color: #05b357;
  color: #fff;
  padding-top: 30rpx;
  font-size: 28rpx;
  position: relative;
}

.header-back {
  display: block;
  height: 100rpx;
  width: 100rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}

.header-back:before {
  content: "";
  display: inline-block;
  height: 10px;
  width: 10px;
  border-width: 2px 2px 0 0;
  border-color: #fff;
  border-style: solid;
  -webkit-transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0);
  transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0);
  position: absolute;
  left: 30rpx;
  top: 42rpx;
}