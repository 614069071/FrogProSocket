    <countdown class="time" countTime="{{countTime}}" clear="{{clear}}" bind:clear="goToBack" />
    <view class="suc-icon">
      <site-icon icon="chenggong" color="#07C160" />
    </view>
    <view class="money">￥<text>{{amount}}</text></view>
    <text class="des">收款成功</text>
